          <h6 class="alertAddProduct" id="costAlert"></h6>
        </div>

        <div class="col-md-6">
          <h5>Chose images</h5>
          <div class="form">
            <div class="grid">
              <div class="form-element">
                <input type="file" id="file-1" name="images" accept="image/*" >
                <label for="file-1" id="file-1-preview">
                  <img src="https://bit.ly/3ubuq5o" alt="">
                  <div>
                    <span>+</span>
                  </div>
                </label>
              </div>
              <div class="form-element">
                <input type="file" id="file-2" name="images"  accept="image/*" >
                <label for="file-2" id="file-2-preview">
                  <img src="https://bit.ly/3ubuq5o" alt="">
                  <div>
                    <span>+</span>
                  </div>
                </label>
              </div>
              <div class="form-element">
                <input type="file" id="file-3" name="images" accept="image/*" >
                <label for="file-3" id="file-3-preview">
                  <img src="https://bit.ly/3ubuq5o" alt="">
                  <div>
                    <span>+</span>
                  </div>
                </label>
              </div>
            </div>
          </div>
            <h6 id="imgAlert"></h6>
            <label class="form-label" for="aboutProduct">About Product</label>
          <textarea class="form-control" placeholder="Enter a detailed description..." name="aboutProduct"
            id="longdescription" rows="4"></textarea>
          <h6 class="alertAddProduct" id="longAlert"></h6>

  <div class="barcode-product">
            <label class="form-label" for="barcode">Barcode</label>
            <input name="barcode" class="form-control" placeholder="Barcode" type="text" id="Barcode">
            <h6 class="alertAddProduct" id="BarcodeAlert"></h6>

            <label class="form-label" for="productId">Product Id</label>
            <input name="productId" class="form-control" placeholder="Product Id" type="text" id="ProductId">
            <h6 class="alertAddProduct" id="ProductIdAlert"></h6>
          </div>






        </div>

      </div>






      <div class="col-12">
        <div class="button-create-cancel">
          <button type="submit" class="btn btn-primary">Create</button>
          <a class="btn btn-danger" href="/admin/products-management">Cancel</a>
        </div>
      </div>

    </form>
