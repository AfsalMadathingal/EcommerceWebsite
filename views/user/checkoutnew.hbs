                            {{/if}}
                            <hr class="bg-dark">
                            <h5 class="ps-3 text-dark">Coupon Discount : {{couponDiscount}}</h5>
                            <hr class="bg-dark">
                            <h5 class="ps-3 text-dark">Offer Savings : {{OfferDiscount}}</h5>
                            <hr class="bg-dark">
                            <h3 class="ps-3 pb-3  text-dark">Order Total: ₹{{cartValue}}</h3>






                            <div class="col">
                                <div class="text-center mt-2 mt-sm-0">

                                    <a href="#" id="place-order-link">
                                        <button id="rzp-button" data-id="{{userId}}" class="btn btn-success"
                                            type="button"><i class="mdi mdi-cart-outline me-1"></i>Place Your Order and
